#include<stdio.h>

int main() {
	int man, woman, child;
	for (man = 1; man <= 100; man++) {
		for (woman = 1; woman <= 100; woman++) {
			for (child = 1; child <= 100; child++) {
				if (man + woman + child == 100 && 3 * man + 2 * woman + 1 / 2 * child == 100 && child % 2 == 0)
					printf("男人有%d个,女人有%d个,小孩有%d个\n", man, woman, child);
			}
		}
	}
	
	return 0;
}
